{
    "name": "websupport/yii-opentracing",
    "type": "yii-extension",
    "description": "OpenTracing component for Yii",
    "keywords": [
        "yii",
        "yii1",
        "opentracing",
        "jaeger",
        "profiling",
        "log"
    ],
    "license": "BSD-3-Clause",
    "require": {
        "php": ">=7.1",
        "opentracing/opentracing": "^1.0.0",
        "ralouphie/getallheaders": "^2.0 || ^3.0",
        "yiisoft/yii": "^1.1.18"
    },
    "conflict": {
        "yiisoft/yii2": "*"
    },
    "require-dev": {
        "jonahgeorge/jaeger-client-php": "dev-master",
        "phpunit/phpunit": "^6.5.14",
        "roave/security-advisories": "dev-master"
    },
    "suggest": {
        "jonahgeorge/jaeger-client-php": "Required for reporting data to Jaeger"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Websupport\\OpenTracing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Websupport\\OpenTracing\\Tests\\": "tests/"
        }
    }
}
